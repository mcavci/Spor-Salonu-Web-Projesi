@model SporSalonuProjesi.Models.DersProgrami
@{
    ViewData["Title"] = "Ders Programı Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">

                <!-- HEADER -->
                <div class="card-header bg-primary text-white p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-25 p-3 rounded-circle me-3">
                            <i class="fas fa-calendar-alt fa-2x"></i>
                        </div>
                        <div>
                            <h4 class="mb-0 fw-bold">Yeni Ders Planla</h4>
                            <small class="opacity-75">Haftalık programa yeni bir ders ekleyin</small>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5">
                    <form asp-action="Create" method="post">

                        <!-- DERS ADI + GÜN -->
                        <div class="row g-4 mb-4">
                            <div class="col-md-7">
                                <div class="form-floating">
                                    <input asp-for="DersAdi" class="form-control" placeholder="Ders Adı" />
                                    <label asp-for="DersAdi">
                                        <i class="fas fa-dumbbell me-2 text-secondary"></i>Ders Adı
                                    </label>
                                </div>
                                <span asp-validation-for="DersAdi" class="text-danger small"></span>
                            </div>

                            <div class="col-md-5">
                                <div class="form-floating">
                                    <select asp-for="Gun" class="form-select">
                                        <option value="" disabled selected>Gün Seçiniz</option>
                                        <option>Pazartesi</option>
                                        <option>Salı</option>
                                        <option>Çarşamba</option>
                                        <option>Perşembe</option>
                                        <option>Cuma</option>
                                        <option>Cumartesi</option>
                                        <option>Pazar</option>
                                    </select>
                                    <label asp-for="Gun">
                                        <i class="fas fa-calendar-day me-2 text-secondary"></i>Gün
                                    </label>
                                </div>
                                <span asp-validation-for="Gun" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- SAATLER -->
                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="BaslangicSaati" type="time" class="form-control" />
                                    <label asp-for="BaslangicSaati">
                                        <i class="fas fa-clock me-2 text-secondary"></i>Başlangıç Saati
                                    </label>
                                </div>
                                <span asp-validation-for="BaslangicSaati" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="BitisSaati" type="time" class="form-control" />
                                    <label asp-for="BitisSaati">
                                        <i class="fas fa-history me-2 text-secondary"></i>Bitiş Saati
                                    </label>
                                </div>
                                <span asp-validation-for="BitisSaati" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- EĞİTMEN + KONTENJAN -->
                        <div class="row g-4 mb-5">
                            <div class="col-md-8">
                                <div class="form-floating">
                                    <select asp-for="EgitmenId"
                                            asp-items="ViewBag.EgitmenId"
                                            class="form-select">
                                        <option value="" disabled selected>Eğitmen Seçiniz</option>
                                    </select>
                                    <label asp-for="EgitmenId">
                                        <i class="fas fa-user-tie me-2 text-secondary"></i>Eğitmen
                                    </label>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="Kontenjan" type="number" min="1" class="form-control" />
                                    <label asp-for="Kontenjan">
                                        <i class="fas fa-users me-2 text-secondary"></i>Kontenjan
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- BUTONLAR -->
                        <div class="d-flex justify-content-between align-items-center border-top pt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="fas fa-arrow-left me-2"></i> Listeye Dön
                            </a>

                            <button type="submit"
                                    class="btn btn-primary btn-lg rounded-pill px-5 shadow-sm">
                                <i class="fas fa-save me-2"></i> Kaydet
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}