@model SporSalonuProjesi.Models.DersProgrami
@{
    ViewData["Title"] = "Ders Programı Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">

    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-gradient bg-primary text-white rounded-top-4">
            <h4 class="mb-0">
                <i class="fas fa-calendar-plus me-2"></i> Yeni Ders Programı
            </h4>
        </div>

        <div class="card-body p-4">

            <form asp-action="Create" method="post">

                <div class="row g-4">

                  
                    <div class="col-md-4">
                        <label asp-for="Gun" class="form-label fw-semibold"></label>
                        <select asp-for="Gun" class="form-select">
                            <option value="">Gün Seç</option>
                            <option>Pazartesi</option>
                            <option>Salı</option>
                            <option>Çarşamba</option>
                            <option>Perşembe</option>
                            <option>Cuma</option>
                            <option>Cumartesi</option>
                            <option>Pazar</option>
                        </select>
                        <span asp-validation-for="Gun" class="text-danger small"></span>
                    </div>

                   
                    <div class="col-md-8">
                        <label asp-for="DersAdi" class="form-label fw-semibold"></label>
                        <input asp-for="DersAdi" class="form-control" placeholder="Örn: CrossFit, Pilates" />
                        <span asp-validation-for="DersAdi" class="text-danger small"></span>
                    </div>

               
                    <div class="col-md-4">
                        <label asp-for="BaslangicSaati" class="form-label fw-semibold"></label>
                        <input asp-for="BaslangicSaati" type="time" class="form-control" />
                        <span asp-validation-for="BaslangicSaati" class="text-danger small"></span>
                    </div>

                 
                    <div class="col-md-4">
                        <label asp-for="BitisSaati" class="form-label fw-semibold"></label>
                        <input asp-for="BitisSaati" type="time" class="form-control" />
                        <span asp-validation-for="BitisSaati" class="text-danger small"></span>
                    </div>

              
                    <div class="col-md-4">
                        <label asp-for="Kontenjan" class="form-label fw-semibold"></label>
                        <input asp-for="Kontenjan" type="number" min="1" class="form-control" />
                    </div>

                
                    <div class="col-md-12">
                        <label asp-for="EgitmenId" class="form-label fw-semibold"></label>
                        <select asp-for="EgitmenId"
                                asp-items="ViewBag.EgitmenId"
                                class="form-select">
                            <option value="">Eğitmen Seç</option>
                        </select>
                    </div>
                </div>

               
                <div class="d-flex justify-content-end mt-4 gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="fas fa-arrow-left me-1"></i> Vazgeç
                    </a>
                    <button type="submit" class="btn btn-success px-4 shadow-sm">
                        <i class="fas fa-save me-1"></i> Kaydet
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>
