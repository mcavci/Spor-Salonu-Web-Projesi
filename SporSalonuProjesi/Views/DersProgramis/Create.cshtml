@model SporSalonuProjesi.Models.DersProgrami

@{
    ViewData["Title"] = "Yeni Ders Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">

            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-primary text-white rounded-top-4">
                    <h5 class="mb-0">
                        <i class="fas fa-calendar-plus me-2"></i>
                        Yeni Ders Programı
                    </h5>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" method="post">

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Gün -->
                        <div class="mb-3">
                            <label asp-for="Gun" class="form-label fw-semibold">Gün</label>
                            <select asp-for="Gun" class="form-select">
                                <option value="">-- Gün Seçiniz --</option>
                                <option>Pazartesi</option>
                                <option>Salı</option>
                                <option>Çarşamba</option>
                                <option>Perşembe</option>
                                <option>Cuma</option>
                                <option>Cumartesi</option>
                                <option>Pazar</option>
                            </select>
                            <span asp-validation-for="Gun" class="text-danger"></span>
                        </div>

                        <!-- Saatler -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="BaslangicSaati" class="form-label fw-semibold">Başlangıç</label>
                                <input asp-for="BaslangicSaati" type="time" class="form-control" />
                                <span asp-validation-for="BaslangicSaati" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="BitisSaati" class="form-label fw-semibold">Bitiş</label>
                                <input asp-for="BitisSaati" type="time" class="form-control" />
                                <span asp-validation-for="BitisSaati" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Ders Adı & Kontenjan -->
                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="DersAdi" class="form-label fw-semibold">Ders Adı</label>
                                <input asp-for="DersAdi" class="form-control" placeholder="Pilates, Zumba..." />
                                <span asp-validation-for="DersAdi" class="text-danger"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Kontenjan" class="form-label fw-semibold">Kontenjan</label>
                                <input asp-for="Kontenjan" type="number" class="form-control" min="1" />
                                <span asp-validation-for="Kontenjan" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Eğitmen -->
                        <div class="mb-4">
                            <label asp-for="EgitmenId" class="form-label fw-semibold">Eğitmen</label>
                            <select asp-for="EgitmenId" class="form-select" asp-items="ViewBag.EgitmenId">
                                <option value="">-- Eğitmen Seçiniz --</option>
                            </select>
                            <span asp-validation-for="EgitmenId" class="text-danger"></span>
                        </div>

                        <!-- Butonlar -->
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Vazgeç
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                Kaydet
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
