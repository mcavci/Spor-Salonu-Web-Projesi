@model SporSalonuProjesi.Models.Paket

@{
    ViewData["Title"] = "Yeni Paket Oluştur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">

             
                <div class="card-header bg-success text-white p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-25 p-3 rounded-circle me-3">
                            <i class="fas fa-box-open fa-2x"></i>
                        </div>
                        <div>
                            <h4 class="mb-0 fw-bold">Yeni Üyelik Paketi</h4>
                            <small class="opacity-75">Yeni bir üyelik paketi oluşturun</small>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5">
                    <form asp-action="Create">

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>

                        <div class="row g-4">
                        
                            <div class="col-md-6">
                                <h6 class="fw-bold text-success mb-3">
                                    <i class="fas fa-info-circle me-2"></i>Paket Detayları
                                </h6>

                                <div class="form-floating mb-3">
                                    <input asp-for="PaketAdi" class="form-control" placeholder="Paket Adı" />
                                    <label asp-for="PaketAdi">
                                        <i class="fas fa-tag me-2 text-success"></i>Paket Adı
                                    </label>
                                    <span asp-validation-for="PaketAdi" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Fiyat" type="number" class="form-control" placeholder="Fiyat" />
                                    <label asp-for="Fiyat">
                                        <i class="fas fa-lira-sign me-2 text-success"></i>Fiyat (₺)
                                    </label>
                                    <span asp-validation-for="Fiyat" class="text-danger small"></span>
                                </div>

                                <div class="form-floating">
                                    <input asp-for="SureAy" type="number" class="form-control" placeholder="Süre" />
                                    <label asp-for="SureAy">
                                        <i class="far fa-calendar-alt me-2 text-success"></i>Süre (Ay)
                                    </label>
                                    <span asp-validation-for="SureAy" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <h6 class="fw-bold text-success mb-3">
                                    <i class="fas fa-check-circle me-2"></i>Kullanım Hakları
                                </h6>

                                <div class="form-floating mb-3">
                                    <input asp-for="HaftalikRandevuLimiti" type="number" class="form-control" placeholder="Limit" />
                                    <label asp-for="HaftalikRandevuLimiti">
                                        <i class="fas fa-calendar-check me-2 text-success"></i>Haftalık Randevu Limiti
                                    </label>
                                    <span asp-validation-for="HaftalikRandevuLimiti" class="text-danger small"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="ToplamAiHakki" type="number" class="form-control" placeholder="AI Hak" />
                                    <label asp-for="ToplamAiHakki">
                                        <i class="fas fa-robot me-2 text-success"></i>AI Analiz Hakkı
                                    </label>
                                    <span asp-validation-for="ToplamAiHakki" class="text-danger small"></span>
                                </div>

                                <div class="form-check form-switch bg-light p-3 rounded-3 border">
                                    <input class="form-check-input" type="checkbox" asp-for="SinirsizMi" />
                                    <label class="form-check-label fw-bold ms-2">
                                        <i class="fas fa-infinity text-primary me-2"></i>Sınırsız Erişim
                                    </label>
                                </div>
                            </div>
                        </div>

                     
                        <div class="d-flex justify-content-between align-items-center border-top pt-4 mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="fas fa-arrow-left me-2"></i>İptal
                            </a>

                            <button type="submit"
                                    class="btn btn-success btn-lg rounded-pill px-5 shadow-sm">
                                <i class="fas fa-save me-2"></i>Paketi Oluştur
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
