@model SporSalonuProjesi.Models.Uye

@{
    ViewData["Title"] = "Yeni Üye Kaydı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9 col-xl-8">

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">

                <!-- HEADER -->
                <div class="card-header bg-primary bg-gradient text-white p-4">
                    <h4 class="fw-bold mb-1">
                        <i class="fas fa-user-plus me-2"></i> Yeni Üye Kayıt Formu
                    </h4>
                    <small class="opacity-75">
                        Lütfen üye bilgilerini eksiksiz doldurunuz
                    </small>
                </div>

                <div class="card-body p-5">

                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>

                        <!-- KİMLİK -->
                        <h6 class="fw-bold mb-3">
                            <span class="badge bg-secondary bg-opacity-10 text-secondary px-3 py-2 rounded-pill">
                                <i class="fas fa-id-card me-1"></i> Kimlik Bilgileri
                            </span>
                        </h6>

                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Ad" class="form-label small fw-semibold">Ad</label>
                                <input asp-for="Ad" class="form-control form-control-lg bg-light border-0 rounded-3 shadow-sm" />
                                <span asp-validation-for="Ad" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Soyad" class="form-label small fw-semibold">Soyad</label>
                                <input asp-for="Soyad" class="form-control form-control-lg bg-light border-0 rounded-3 shadow-sm" />
                                <span asp-validation-for="Soyad" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- İLETİŞİM -->
                        <h6 class="fw-bold mb-3">
                            <span class="badge bg-info bg-opacity-10 text-info px-3 py-2 rounded-pill">
                                <i class="fas fa-address-book me-1"></i> İletişim & Güvenlik
                            </span>
                        </h6>

                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label small fw-semibold">E-Posta</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-0">
                                        <i class="fas fa-envelope text-secondary"></i>
                                    </span>
                                    <input asp-for="Email" type="email" class="form-control bg-light border-0 rounded-end-3" />
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Telefon" class="form-label small fw-semibold">Telefon</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-0">
                                        <i class="fas fa-phone text-secondary"></i>
                                    </span>
                                    <input asp-for="Telefon" class="form-control bg-light border-0 rounded-end-3" />
                                </div>
                            </div>

                            <div class="col-12">
                                <label asp-for="Sifre" class="form-label small fw-semibold">Şifre</label>
                                <div class="input-group shadow-sm">
                                    <span class="input-group-text bg-light border-0">
                                        <i class="fas fa-lock text-secondary"></i>
                                    </span>
                                    <input asp-for="Sifre" type="password" class="form-control bg-light border-0 rounded-end-3" />
                                </div>
                            </div>
                        </div>

                        <!-- BUTONLAR -->
                        <div class="d-flex justify-content-between mt-5">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill px-4">
                                <i class="fas fa-arrow-left me-2"></i> Geri
                            </a>

                            <button type="submit"
                                    class="btn btn-primary btn-lg rounded-pill px-5 shadow-sm">
                                <i class="fas fa-save me-2"></i> Kaydı Tamamla
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}